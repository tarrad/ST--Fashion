<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <Button
        android:id="@+id/btnTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_top"
        android:background="@drawable/rounded_btn"
        android:textColor="@android:color/white"
        android:layout_marginTop="3dp" />

    <Button
        android:id="@+id/btnBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_bottom"
        android:background="@drawable/rounded_btn"
        android:textColor="@android:color/white"
        android:layout_marginTop="3dp" />

    <Button
        android:id="@+id/btnShoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_shoes"
        android:background="@drawable/rounded_btn"
        android:textColor="@android:color/white"
        android:layout_marginTop="3dp" />

    <EditText
        android:id="@+id/editTextOutSeason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/create_season"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/editTextOutColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/create_color"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_save"
        android:background="@drawable/rounded_btn"
        android:textColor="@android:color/white"
        android:layout_marginTop="3dp" />

    <Button
        android:id="@+id/btnRandom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/rounded_btn"
        android:text="@string/create_random"
        android:textColor="@android:color/white" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_pictop"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/imageViewTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/ic_image_black_24dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/textViewBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_picbottom"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/imageViewBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_image_black_24dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/textViewShoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_picshoes"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/imageViewShoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/ic_image_black_24dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>